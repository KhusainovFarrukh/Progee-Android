<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/languagesFragment">

    <fragment
        android:id="@+id/createDataFragment"
        android:name="kh.farrukh.progee.ui.create_data.CreateDataFragment"
        android:label="CreateDataFragment"
        tools:layout="@layout/fragment_create_data" />
    <fragment
        android:id="@+id/languagesFragment"
        android:name="kh.farrukh.progee.ui.languages.LanguagesFragment"
        android:label="LanguagesFragment"
        tools:layout="@layout/fragment_languages">
        <action
            android:id="@+id/action_languagesFragment_to_languageDetailsFragment"
            app:destination="@id/languageDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/playgroundFragment"
        android:name="kh.farrukh.progee.ui.playground.PlaygroundFragment"
        android:label="PlaygroundFragment"
        tools:layout="@layout/fragment_playground" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="kh.farrukh.progee.ui.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/languageDetailsFragment"
        android:name="kh.farrukh.progee.ui.language_details.LanguageDetailsFragment"
        android:label="LanguageDetailsFragment"
        tools:layout="@layout/fragment_language_details">
        <argument
            android:name="languageId"
            app:argType="long" />
        <action
            android:id="@+id/action_languageDetailsFragment_to_frameworkDetailsFragment"
            app:destination="@id/frameworkDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/frameworkDetailsFragment"
        android:name="kh.farrukh.progee.ui.framework_details.FrameworkDetailsFragment"
        android:label="FrameworkDetailsFragment"
        tools:layout="@layout/fragment_framework_details">
        <argument
            android:name="languageId"
            app:argType="long" />
        <argument
            android:name="frameworkId"
            app:argType="long" />
    </fragment>
</navigation>